---
import Layout from '../layouts/Page.astro'
import Container from '../components/Container.astro';
import BlogPostsList from '../components/BlogPostsList.astro';

const posts = (await Astro.glob('./blog/*.{md,mdx}')).sort(
	(a, b) => new Date(b.frontmatter.publishedAt).valueOf() - new Date(a.frontmatter.publishedAt).valueOf()
);

const seo = {
  title: 'Blog List',
  description: 'A simple blog template for Astro',
}

const pageTitle = "Blog List";
---

<style>
  .home-hero-text__container {
    padding: 5vh 0;
  }
  h1 {
    text-align: center;
  }
</style>

<Layout seo={seo}>
  <Container>
    <div class="home-hero-text__container">
      <h1 class="fade-in">{pageTitle}</h1>
      <p>The best of the best. That is what you will find here.</p>
    </div>
  </Container>
</Layout>

